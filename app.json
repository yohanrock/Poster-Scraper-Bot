{
  "name": "Poster Bot",
  "description": "Telegram bot that fetches Posters from multiple OTT platforms & Bypass direct links from cloud sites.",
  "repository": "https://github.com/the-piro/pstr",
  "stack": "container",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token from @BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Get this from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Get this from my.telegram.org",
      "required": true
    },
    "DATABASE_URL": {
      "description": "MongoDB URI",
      "required": true
    },
    "DATABASE_NAME": {
      "description": "MongoDB DB name",
      "required": false,
      "value": "ebotz"
    },
    "OWNER_ID": {
      "description": "Your Telegram numeric user id",
      "required": true
    },
    "SUDO_USERS": {
      "description": "Space separated user IDs (optional)",
      "required": false
    },
    "AUTH_CHATS": {
      "description": "Space separated chat IDs allowed (optional)",
      "required": false
    },
    "PUBLIC_MODE": {
      "description": "true/false, allow everyone to use bot",
      "required": false,
      "value": "True"
    },
    "TIMEZONE": {
      "description": "Timezone e.g. Asia/Kolkata",
      "required": false,
      "value": "Asia/Kolkata"
    },
    "UPSTREAM_REPO": {
      "description": "Git repo for updates",
      "required": false,
      "value": "https://github.com/the-piro/pstr"
    },
    "UPSTREAM_BRANCH": {
      "description": "Branch for updates",
      "required": false,
      "value": "main"
    },
    "TMDB_ACCESS_TOKEN": {
      "description": "TMDB Token is optional bot will use third party proxy (https://tmdbapi.the-zake.workers.dev) if u don't want to set TMDB token",
      "required": false
    }
  }
}
